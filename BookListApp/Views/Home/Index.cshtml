@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    <div id="BooksList">

    </div>

    <div>
        <div class="row justify-content-center mt-4">
            <div class="input-group col-4 ">
                <div class="input-group-prepend">
                    <span class="input-group-text ">Title: </span>
                </div>
                <input class="form-control" id="title" type="text" />
            </div>

            <div class="input-group col-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">Author: </span>
                </div>
                <input class="form-control" id="author" type="text" />
            </div>
        </div>
        <div class="row mt-2 justify-content-center">
            <h5 class="col-12 text-center">Short description </h5>
            <textarea class="form-control col-8" id="description" rows="6"> </textarea>
        </div>
        <div class="row mt-4 justify-content-center">
            <input class="form-control col-4" type="button" value="Create new book" onclick="CreateBook()" />
        </div>
        
    </div>

</div>

